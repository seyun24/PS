#include <bits/stdc++.h>
using namespace std;
int ans;
int main(void) {
    ios::sync_with_stdio(0);
    cin.tie(0);
    int t;
   
    cin >> t;
    for (int i = 0; i < t; i++) {
        int r;
        cin >> r;
        string a,b;
        cin >> a;
        for (auto c : a) {
            for (int k = 0; k < r; k++)b += c;
        }
        cout << b<<"\n";

    }
        


    
}
