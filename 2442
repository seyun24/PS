#include <bits/stdc++.h>
using namespace std;

int main(void) {
    ios::sync_with_stdio(0);
    cin.tie(0);

    int N;
    cin >> N;

    for (int i = 0; i < N; i++) {
       
        for (int k = i; k < N-1; k++)  cout << ' ';
        for (int k = N-2*i; k <= N; k++)  cout << '*';
        cout << '\n';
       
    }
}
